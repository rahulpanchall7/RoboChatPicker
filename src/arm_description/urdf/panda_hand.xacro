<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panda_hand">

  <xacro:macro name="panda_hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' ">
    <xacro:unless value="${connected_to == ''}">
      <joint name="${ns}_hand_joint" type="fixed">
        <parent link="${connected_to}" />
        <child link="${ns}_hand" />
        <origin xyz="${xyz}" rpy="${rpy}" />
      </joint>
    </xacro:unless>

    <!-- Hand Link -->
    <link name="${ns}_hand">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/visual/hand.dae" />
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/collision/hand.stl" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.68" />
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
      </inertial>
    </link>

    <!-- Left Finger Link -->
    <link name="${ns}_leftfinger">
      <visual>
        <geometry>
          <mesh filename="package://arm_description/meshes/visual/finger.dae" />
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://arm_description/meshes/collision/finger.stl" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0.32" />
        <mass value="0.5" />
        <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002" />
      </inertial>
    </link>

    <!-- Right Finger Link -->
    <link name="${ns}_rightfinger">
      <visual>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://arm_description/meshes/visual/finger.dae" />
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://arm_description/meshes/collision/finger.stl" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0.32" />
        <mass value="0.5" />
        <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002" />
      </inertial>
    </link>

    <!-- Left Finger Joint -->
    <joint name="${ns}_finger_joint1" type="prismatic">
      <parent link="${ns}_hand" />
      <child link="${ns}_leftfinger" />
      <origin rpy="0 0 0" xyz="0 0 0.0584" />
      <axis xyz="0 1 0" />
      <limit effort="40" lower="0.0" upper="0.04" velocity="0.2" />
    </joint>

    <!-- Right Finger Joint -->
    <joint name="${ns}_finger_joint2" type="prismatic">
      <parent link="${ns}_hand" />
      <child link="${ns}_rightfinger" />
      <origin rpy="0 0 0" xyz="0 0 0.0584" />
      <axis xyz="0 -1 0" />
      <limit effort="40" lower="0.0" upper="0.04" velocity="0.2" />
      <mimic joint="${ns}_finger_joint1" />
    </joint>

    <!-- Dummy fixed joint and link to match the original structure -->
    <joint name="${ns}_finger_joint2_mimic" type="fixed">
      <parent link="${ns}_hand" />
      <child link="${ns}_random" />
    </joint>
    <link name="${ns}_random"/>

  </xacro:macro>

</robot>
